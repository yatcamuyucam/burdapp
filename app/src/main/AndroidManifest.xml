<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Burdapp"
        tools:targetApi="31">
        <activity
            android:name=".Activity.FavoritesActivity"
            android:exported="false" /> <!-- IntroActivity: Uygulamanın başlangıç noktası -->
        <activity
            android:name=".Activity.IntroActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- LoginActivity: Kullanıcı giriş ekranı -->
        <activity
            android:name=".Activity.LoginActivity"
            android:exported="true" /> <!-- SignupActivity: Kullanıcı kayıt ekranı -->
        <activity
            android:name=".Activity.SignupActivity"
            android:exported="true" /> <!-- MainActivity: Uygulamanın ana ekranı -->
        <activity
            android:name=".Activity.MainActivity"
            android:exported="true" /> <!-- ExplorerActivity: Keşif ekranı -->
        <activity
            android:name=".Activity.ExplorerActivity"
            android:exported="false" /> <!-- TicketActivity: Bilet ekranı -->
        <activity
            android:name=".Activity.TicketActivity"
            android:exported="false" /> <!-- DetailActivity: Detay ekranı -->
        <activity
            android:name=".Activity.DetailActivity"
            android:exported="false" /> <!-- BaseActivity: Tüm aktivitelerin temel sınıfı -->
        <activity
            android:name=".Activity.BaseActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.UserActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.SavedTicketActivity"
            android:exported="false" />
    </application>

</manifest>